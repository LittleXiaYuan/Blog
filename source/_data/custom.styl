.conversation
  display: flex
  align-items: flex-start
  gap: .6rem
  margin: .5rem 0
  &.row-reverse
    flex-direction: row-reverse
  .conversation-avatar
    width: 36px
    height: 36px
    border-radius: 50%
    object-fit: cover
    box-shadow: 0 0 0 2px rgba(255,255,255,.18)
  .conversation-bubble
    background: rgba(0,0,0,.14)
    border-radius: 12px
    padding: .6rem .8rem
    max-width: 100%
    line-height: 1.6
#brand .artboard
  font-family: 'Noto Serif SC', 'Noto Serif', serif
  font-weight: 600
  letter-spacing: .5px
  opacity: .95
  text-shadow: 0 0.6px 0 rgba(0,0,0,.12)

#brand .title
  font-family: 'Noto Serif SC', 'Noto Serif', serif
  font-weight: 700
